<Window x:Class="LayoutWithDockPanels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutWithDockPanels"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <DockPanel>
        <Button Height="25" Background="Red" DockPanel.Dock="Top" />
        <Button Width="25" Background="Orange" DockPanel.Dock="Left" />
        <Button Width="25" Background="Yellow" DockPanel.Dock="Right" /> 
        <Button Height="25" Background="Green" DockPanel.Dock="Bottom" /> 
        <Button Background="Purple"  /> 
    </DockPanel>
</Window>
